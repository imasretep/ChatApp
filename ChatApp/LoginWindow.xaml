<Window x:Class="ChatApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp"
        mc:Ignorable="d"
        FontFamily="Consolas"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="108*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,180,0,0" Grid.RowSpan="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="#212529" Text="Username:" Margin="10"/>
                <TextBox x:Name="txtUsername" Margin="10" Width=" 200" />
            </StackPanel>

            <Button 
                x:Name="btnLogin"
                Content="Login" 
                Width="150" 
                Margin="10" 
                HorizontalAlignment="Right"
                Click="btnLogin_ClickAsync"
                />
        </StackPanel>
    </Grid>
</Window>
